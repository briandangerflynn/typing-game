<!DOCTYPE html>
<html>
<head>
  <title>CodeTypingApp</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <div id="navbar">
      <a id="nav-home" href='/'>Home</a>
      <% if current_user %>
       <a href="/users/<%= current_user.id %>">Signed in as <%= current_user.name.capitalize %></a>
       <%= link_to "Logout", '/logout', :class=>"navlink" %>
      <% else %>
        <%= link_to 'Login', '/login' , :class=>"navlink" %>
        <%= link_to 'Signup', '/users/new', :class=>"navlink" %>
      <% end %>
    </div>
  </nav>

<%= yield %>


</body>
</html>
